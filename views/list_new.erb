<div class="row">
	<h1 class="text-center"><%= title %></h1>
</div>
<%= page.data.length %>
<div class="row">
<% page.data.each_with_index do |movie, index| %>
	<% if (index % (page.data.length/2)) == 0 %>
	<div class="col-md-6" >
	<% end %>

		<div class="row well " style="max-height: 300px">
			<div class="col-md-4">
				<a href=<%= '"http://localhost:8080/movie/' + movie.id.to_s + '"' %> ><img src=<%= '"https://image.tmdb.org/t/p/w185' +'"' %>  onerror="this.src='https://d3a8mw37cqal2z.cloudfront.net/assets/f996aa2014d2ffddfda8463c479898a3/images/no-poster-w185.jpg'" alt=<%='"'+ movie.title.to_s + '"'%> title=<%='"' + movie.title.to_s+ '"'%> class="img-thumbnail img-responsive center-block"  /></a>
			</div>

			<div class="col-md-8">
				<div class="truncate"><a href=<%= '"http://localhost:8080/movie/' + movie.id.to_s + '"' %>><h2><%= movie.title.to_s %></h2></a>
					<p><%= movie.overview %></p>
				</div>
				<!--<div style="min-height: 30px"></div> -->
				<p><a class="btn btn-default pull-right" href=<%= '"http://localhost:8080/movie/' + movie.id.to_s + '"' %> >Read More...</a></p>
			</div>
		</div>


	<% if (index % (page.data.length/2))==((page.data.length/2) -1) %>
	</div>
	<% end %>
	<% end %>
